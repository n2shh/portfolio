---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";

import projects from "../data/projects.json";
---

<Layout
  title="nish"
  description="Frontend developer - software engineer student"
>
  <main>
    <div
      class="flex flex-col sm:gap-10 gap-4 justify-center items-center h-[45rem] select-none"
    >
      <h1
        class="text-6xl sm:text-8xl text-swhite text-center sm:leading-[85px] font-black"
      >
        Nicolas S.
      </h1>
      <h2 class="text-sm sm:text-2xl text-lgray text-center font-medium">
        Frontend Developer. Student at{" "}
        <a
          class="underline decoration-mpurple"
          href="https://platzi.com/p/nish_/"
        >
          Platzi.com
        </a>{" "}
        <br />
        <p class="text-sm sm:text-lg text-neutral-300 text-sgray">
          (Certified at Javascript path)
        </p>
      </h2>
      <div
        class="fixed top-48 left-20 pointer-events-none -z-50 invisible xl:visible"
      >
        <img src="/images/Group1.png" alt="" />
      </div>
      <div
        class="fixed top-48 right-20 pointer-events-none -z-50 invisible xl:visible"
      >
        <img src="/images/Group2.png" alt="" />
      </div>
    </div>

    <section class="projects flex flex-col justify-center items-center">
      <h1 class="text-3xl sm:text-4xl text-swhite text-center font-bold mb-4">
        Some projects
      </h1>
      <div class="flex xl:w-[70rem] lg:w-[50rem] flex-wrap w-[20rem]">
        {
          projects.map((project) => {
            return (
              <Project
                tags={project.tags}
                image={project.image}
                title={project.title}
                description={project.description}
                link={project.link}
              />
            );
          })
        }
      </div>
    </section>
  </main>
</Layout>
